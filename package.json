    "prettier-check": "pretty-quick --check",
    "prettier-fix": "pretty-quick"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AntoineAbhay/back-skeleton.git"
  },
  "keywords": [
    "back",
    "nodejs",
    "server"
  ],
  "author": "Antoine ABHAY",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AntoineAbhay/back-skeleton/issues"
  },
  "homepage": "https://github.com/AntoineAbhay/back-skeleton#readme",
  "dependencies": {
    "body-parser": "^1.20.1",
    "convict": "^5.2.0",
    "express": "^4.18.2",
    "helmet": "^3.21.2",
    "monk": "^7.1.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "husky": "^3.1.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
