{
  "name": "back-skeleton",
  "version": "0.0.1",
  "description": "This is a skeleton for a backend server written in nodeJS.",
  "main": "src/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "NODE_ENV=development node --experimental-modules src/index.mjs",
    "start-production": "NODE_ENV=production node --experimental-modules src/index.mjs",
